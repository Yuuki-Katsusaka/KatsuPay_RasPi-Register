#:kivy 1.0.9

WindowManager:
    LoginWindow:
    CustomerWindow:
    StoreWindow:
    SalesWindow:
    ProductEditWindow:

<Widget>:
    font_name: '/usr/share/fonts/truetype/takao-gothic/TakaoPGothic.ttf'

<MenuButton@Button>:
    font_size: 30
    text_size: self.size
    halign: 'center'
    valign: 'bottom'
    color: (0,0,0,1)
    background_normal: ''
    background_down: ''

<InfoLabel@Label>:
    font_size: 40
    color: 0,0,0,1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<ChargeButton@Button>:
    font_size: 80
    background_color: .3, .8, .9, 1

<SelectButton@Button>:
    font_size: 50

<PriceLabel@Label>:
    font_size: 30

<PriceTextInput@TextInput>:
    font_size: 60


<KLabel@Label>:
    font_size: 30
<KLabel2@Label>:
    font_size: 30
    canvas.before:
        Color:
            rgba: 0,0.7,0.4,0.7
        Rectangle:
            pos: self.pos
            size: self.size

<KButton@Button>:
    font_size: 25

<KTextInput@TextInput>:
    font_size: 50

<LoginWindow>:
    name: 'login'
    FloatLayout:
        Button:
            text: 'アプリ終了'
            size_hint: 0.1, 0.1
            pos_hint: {'right':1, 'top':1}
            on_release: root.sysExit()
    BoxLayout:
        orientation: 'vertical'
        KLabel:
            text: '店舗アカウントIDを入力'
        BoxLayout:
            orientation: 'horizontal'
            KLabel:
                size_hint_x: 0.2
                text: '店舗ID'
            KTextInput:
                id: login_id
                size_hint_x: 0.8
                text: '2066005'
                input_filter: 'int'
        BoxLayout:
            orientation: 'horizontal'
            KLabel:
                size_hint_x: 0.2
                text: 'パスワード'
            KTextInput:
                id: login_pass
                size_hint_x: 0.8
                text: 'yuukikatsu1027'
                password: True
        BoxLayout:
            id: login_lay
            KButton:
                text: 'OK'
                on_release: 
                    root.checkID()


<CustomerWindow>:
    name: 'customer'
    BoxLayout:
        ScreenManager:
            size_hint_x: 0.75
            id: sm_cus
            Screen:
                name: 'none'
            ItemSelectingScreen:
                name: 's_item'
            ChargeSelectingScreen:
                name: 's_charge'
            SignupScreen:
                name: 's_signup'
            NfcScreen:
                name: 's_nfc'
            SuccessScreen:
                name: 's_suc'
            FailScreen:
                name: 's_fail'
            BalanceFailScreen:
                name: 's_bfail'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.15
            MenuButton:
                id: pay_b
                text: '支払い'
                on_release: root.updateActiveBtn(1)
                canvas:
                    Color:
                        rgba: root.color[1]
                    Rectangle:
                        pos: self.pos
                        size: (self.width / 12, self.height)
                Image:
                    source: './img/pay.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            MenuButton:
                id: charge_b
                text: '\nチャージ'
                on_release: root.updateActiveBtn(2)
                canvas:
                    Color:
                        rgba: root.color[2]
                    Rectangle:
                        pos: self.pos
                        size: (self.width / 12, self.height)
                Image:
                    source: './img/charge.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            MenuButton:
                id: signup_b
                text: '登録'
                on_release: root.updateActiveBtn(3)
                canvas:
                    Color:
                        rgba: root.color[3]
                    Rectangle:
                        pos: self.pos
                        size: (self.width / 12, self.height)
                Image:
                    source: './img/card.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            MenuButton:
                id: menu_b
                on_release: root.manager.current = 'login'
                Image:
                    source: './img/setting.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

<ItemSelectingScreen>:
    BoxLayout:
        orientation: 'vertical'
        InfoLabel:
            size_hint_y: .1
            text: '商品を選択してください'
        BoxLayout:
            size_hint_y: .9            
            ScrollView:
                size_hint_x: .6
                BoxLayout:
                    orientation: 'vertical'
                    id: items
                    size_hint_y: None
                    height: self.minimum_height
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .4
                BoxLayout:
                    size_hint_y: .05
                    PriceLabel:
                        size_hint_x: .8
                        text: '商品名・金額'
                    PriceLabel:
                        size_hint_x: .2
                        text: '個数'
                ScrollView:
                    size_hint_y: .5
                    BoxLayout:
                        orientation: 'vertical'
                        id: cart
                        size_hint_y: None
                        height: self.minimum_height
                BoxLayout:
                    size_hint_y: .15
                    PriceLabel:
                        size_hint_x: .3
                        text: '金額'
                    PriceTextInput:
                        size_hint_x: .6
                        text: root.price_property
                        input_filter: 'int'
                        readonly: True
                SelectButton:
                    size_hint_y: 0.15
                    text: '支払いへ'
                    on_release: root.pressEnterBtn()
                SelectButton:
                    size_hint_y: 0.15
                    text: '取消'
                    on_release: root.pressCancelBtn()
    

<ChargeSelectingScreen>:
    BoxLayout:
        orientation: 'vertical'
        InfoLabel:
            size_hint_y: .1
            text: '金額を入力してください'
        BoxLayout:
            size_hint_y: .9
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .6
                ChargeButton:
                    size_hint_y: .25
                    text: '+50'
                    on_release: root.pressPriceBtn(50)
                ChargeButton:
                    size_hint_y: .25
                    text: '+100'
                    on_release: root.pressPriceBtn(100)
                ChargeButton:
                    size_hint_y: .25
                    text: '+500'
                    on_release: root.pressPriceBtn(500)
                ChargeButton:
                    size_hint_y: .25
                    text: '+1,000'
                    on_release: root.pressPriceBtn(1000)
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .4
                Label:
                    size_hint_y: .55
                BoxLayout:
                    size_hint_y: .15
                    PriceLabel:
                        size_hint_x: .3
                        text: '金額'
                    PriceTextInput:
                        size_hint_x: .6
                        text: root.price_property
                        input_filter: 'int'
                        readonly: True
                    PriceLabel:
                        size_hint_x: .1
                        text: '円'
                SelectButton:
                    size_hint_y: .15
                    text: 'チャージ'
                    on_release: root.pressEnterBtn()
                SelectButton:
                    size_hint_y: .15
                    text: '取消'
                    on_release: root.pressCancelBtn()


<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .6, 1, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size

        InfoLabel:
            id: nfc_inf
            size_hint_y: 0.1
            text: '学生証をリーダにタッチしてください'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Image:
                id: sign_img
                size_hint: 0.6, 0.6
                source: './img/nfc_touch.gif'
                anim_delay: 1
                # allow_strech: True

<NfcScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .6, 1, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size

        InfoLabel:
            id: nfc_inf
            size_hint_y: 0.1
            text: '学生証をリーダにタッチしてください'
        Image:
            id: nfc_img
            size_hint_y: 0.5
            source: "./img/nfc_touch.gif"
            anim_delay: 1
            allow_strech: True
        AnchorLayout:
            id: anchor
            size_hint_y: 0.4
            anchor_x: 'center'
            anchor_y: 'center'
            SelectButton:
                id: nfc_b
                size_hint: 0.5,0.5
                text: '取消'
                on_release: root.pressCancelBtn()

<SuccessScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .6, 1, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size

        InfoLabel:
            id: suc_inf
            size_hint_y: 0.1
        Image:
            id: nfc_img
            size_hint_y: 0.5
            source: root.source
            anim_delay: 1
            allow_strech: True
        AnchorLayout:
            id: anchor
            size_hint_y: 0.4
            anchor_x: 'center'
            anchor_y: 'center'
            SelectButton:
                id: nfc_b
                size_hint: 0.5,0.5
                text: 'OK'
                on_release: root.pressCancelBtn()

<FailScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .6, 1, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size

        InfoLabel:
            id: fail_inf
            size_hint_y: 0.1
            text: "エラーが発生しました"
        Image:
            id: nfc_img
            size_hint_y: 0.5
            source: "./img/error.png"
            anim_delay: 1
            allow_strech: True
        AnchorLayout:
            id: anchor
            size_hint_y: 0.4
            anchor_x: 'center'
            anchor_y: 'center'  
            SelectButton:
                id: fail_b
                size_hint: 0.5,0.5
                text: '戻る'
                on_release: root.pressCancelBtn()

<BalanceFailScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .6, 1, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size
        InfoLabel:
            id: bfail_inf
            size_hint_y: 0.1
        Image:
            id: nfc_img
            size_hint_y: 0.5
            source: "./img/error.png"
            anim_delay: 1
            allow_strech: True
        AnchorLayout:
            id: anchor
            size_hint_y: 0.4
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayout:
                orientation: "horizontal"   
                SelectButton:
                    id: fail_b
                    size_hint: 0.5,0.5
                    text: '戻る'
                    on_release: root.pressCancelBtn()
                SelectButton:
                    size_hint: 0.5,0.5
                    text: "チャージ"
                    on_release: root.pressChargeBtn()

<StoreWindow>:
    name: 'store'
    BoxLayout:
        KButton:
            text: '商品の追加・編集・削除'
            on_release:
                root.manager.current = 'p_edit'
        BoxLayout:
            orientation: 'vertical'
            KButton:
                text: '販売者ページへ'
                on_release: 
                    root.manager.current = 'customer'
                    root.manager.transition.direction = 'right'
            KButton:
                text: '売上の確認'
                on_release: 
                    root.manager.current = 'sales'
    FloatLayout:
        Button:
            text: 'アプリ終了'
            size_hint: 0.1, 0.1
            pos_hint: {'right':1, 'top':1}
            on_release: root.sysExit()

<SalesWindow>:
    name: 'sales'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.2
            KLabel:
                size_hint_x: 0.7
                text: '売上の確認'
            KButton:
                size_hint_x: 0.3
                text: '戻る'
                on_release: 
                    root.manager.current = 'store'
        KLabel:
            id: sales_price
            size_hint_y: 0.2
            text: '売上金額：受信中．．．'        
        BoxLayout:
            size_hint_y: 0.6
            ScrollView:
                size_hint_x: 0.3
                BoxLayout:
                    orientation: 'vertical'
                    id: tran
                    size_hint_y: None
                    height: self.minimum_height


<CalculatorWindow>:
    name: 'calculator'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.2
            KLabel:
                size_hint_x: 0.7
                text: '金額を入力してください'
            KButton:
                size_hint_x: 0.3
                text: '戻る'
                on_release: 
                    root.manager.current = 'customer'
        KTextInput:
            id: display_input
            size_hint_y: 0.1
            hint_text: '0'
            disabled: True
            input_filter: 'int'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.6
            BoxLayout:
                size_hint_y: 0.6
                KButton:
                    text: '100円'
                    on_release: root.print_number(100)
                KButton:
                    text: '500円'
                    on_release: root.print_number(500)
                KButton:
                    text: '1000円'
                    on_release: root.print_number(1000)
            BoxLayout:
                size_hint_y: 0.4
                KLabel:
                    id: warning
                    size_hint_x: 0.5
                KButton:
                    size_hint_x: 0.25
                    text: 'クリア'
                    on_release: root.clear_display()
                KButton:
                    size_hint_x: 0.25
                    text: '決定'
                    on_release: 
                        root.press_enter()
            

<ErrorPop>:
    orientation: 'vertical'
    KLabel:
        text: 'エラーが発生しました．'
    BoxLayout:
        KButton:
            text: 'メニューに戻る'
            on_release: root.closePopup()

<ItemErrorPop>:
    orientation: 'vertical'
    KLabel:
        text: '商品が選択されていません.'
    BoxLayout:
        KButton:
            text: '閉じる'
            on_release: root.CloseErrorPop()


<ProductEditWindow>:
    name: 'p_edit'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.2
            KLabel:
                size_hint_x: 0.7
                text: '編集・削除したい商品を\n選択してください'
            KButton:
                size_hint_x: 0.3
                text: '戻る'
                on_release:
                    root.manager.current = 'store'
        BoxLayout:
            size_hint_y: 0.8
            ScrollView:
                size_hint_x: 0.3
                canvas.before:
                    Color:
                        rgba: 0,0,0.7,0.7
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    id: prod
                    size_hint_y: None
                    orientation: 'vertical'
                    height: self.minimum_height
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.7
                BoxLayout:
                    size_hint_y: 0.2
                    KLabel2:
                        size_hint_x: 0.2
                        text: '商品番号'
                    KTextInput:
                        id: p_id
                        size_hint_x: 0.8
                        font_size: 30
                        text: ''
                        readonly: True
                        canvas.before:
                            Color:
                                rgba: 0.2,0.2,0.2,0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: 0.2
                    KLabel2:
                        size_hint_x: 0.2
                        text: '商品名'
                    KTextInput:
                        id: name
                        size_hint_x: 0.8
                        font_size: 30
                        text: ''
                        readonly: root.isReadOnly
                BoxLayout:
                    size_hint_y: 0.2
                    KLabel2:
                        size_hint_x: 0.2
                        text: '金額'
                    KTextInput:
                        id: price
                        size_hint_x: 0.8
                        font_size: 30
                        text: ''
                        readonly: root.isReadOnly
                        input_filter: 'int'
                BoxLayout:
                    size_hint_y: 0.4
                    KLabel:
                        font_size: 25
                        size_hint_x: 0.7
                        id: warning
                        text: ''
                    BoxLayout:
                        size_hint_x: 0.3
                        orientation: 'vertical'
                        KButton:
                            id: edit_b
                            text: '編集'
                            on_release:
                                root.editEvent()
                        KButton:
                            id: delete_b
                            text: '削除'
                            on_release:
                                root.deleteEvent()
                    